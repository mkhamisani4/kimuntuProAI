{
  "name": "kimuntupro-ai",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "npm run build:packages && next build",
    "build:packages": "npm run build --workspace=packages/shared && npm run build --workspace=packages/db && npm run build --workspace=packages/ai-core",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc -b packages/shared/tsconfig.json packages/db/tsconfig.json packages/ai-core/tsconfig.json",
    "test": "npm run test --workspace=packages/ai-core",
    "test:watch": "npm run test:watch --workspace=packages/ai-core"
  },
  "dependencies": {
    "firebase": "^10.14.1",
    "lucide-react": "^0.263.1",
    "next": "^15.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitest/ui": "^2.0.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  }
}
