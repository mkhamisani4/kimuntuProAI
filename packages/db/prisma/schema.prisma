// This is your Prisma schema file for KimuntuPro AI
// Documentation: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [pgvector(map: "vector", schema: "public")]
}

// Tenant model for multi-tenancy support
model Tenant {
  id           String        @id @default(cuid())
  name         String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  users        User[]
  documents    Document[]
  chunks       Chunk[]
  embeddings   Embedding[]
  usageLogs    UsageLog[]
  featureFlags FeatureFlag[]

  @@index([createdAt])
  @@map("tenants")
}

// User model
model User {
  id        String     @id @default(cuid())
  email     String     @unique
  tenantId  String
  tenant    Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  usageLogs UsageLog[]

  @@index([tenantId])
  @@index([email])
  @@map("users")
}

// Document model for RAG
model Document {
  id        String   @id @default(cuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  title     String
  url       String?
  tags      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  chunks    Chunk[]

  @@index([tenantId])
  @@index([createdAt])
  @@map("documents")
}

// Chunk model for document chunks
model Chunk {
  id         String     @id @default(cuid())
  documentId String
  tenantId   String
  document   Document   @relation(fields: [documentId], references: [id], onDelete: Cascade)
  tenant     Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  content    String     @db.Text
  tokenCount Int
  createdAt  DateTime   @default(now())
  embedding  Embedding?

  @@index([tenantId])
  @@index([documentId])
  @@index([createdAt])
  @@map("chunks")
}

// Embedding model with pgvector support
model Embedding {
  id        String                       @id @default(cuid())
  chunkId   String                       @unique
  tenantId  String
  chunk     Chunk                        @relation(fields: [chunkId], references: [id], onDelete: Cascade)
  tenant    Tenant                       @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  vector    Unsupported("vector(1536)")
  createdAt DateTime                     @default(now())

  @@index([tenantId])
  @@map("embeddings")
}

// Usage log for cost tracking and metering
model UsageLog {
  id              String   @id @default(cuid())
  tenantId        String
  userId          String
  tenant          Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  model           String
  tokensIn        Int
  tokensOut       Int
  costCents       Int
  latencyMs       Int
  toolInvocations Json     @db.JsonB
  assistantType   String?
  createdAt       DateTime @default(now())

  @@index([tenantId])
  @@index([userId])
  @@index([createdAt])
  @@index([assistantType])
  @@map("usage_logs")
}

// Feature flag model for kill switches
model FeatureFlag {
  id        String   @id @default(cuid())
  flagName  String
  enabled   Boolean  @default(true)
  tenantId  String?
  tenant    Tenant?  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  updatedAt DateTime @updatedAt

  @@unique([flagName, tenantId])
  @@index([tenantId])
  @@index([flagName])
  @@index([enabled])
  @@map("feature_flags")
}
